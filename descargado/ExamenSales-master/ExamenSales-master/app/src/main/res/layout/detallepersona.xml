<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_Foto_DetallePersona"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@drawable/icon_persona"/>


    <TextView
        android:id="@+id/tv_Nombre_DetallePersona"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:text="Nombre"
        android:textSize="19sp"
        android:textStyle="bold" />









        <TextView
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Apellidos"
            android:layout_marginTop="5dp"

            android:textStyle="bold"
            android:textSize="16sp"
            android:id="@+id/tv_apellidos_DetallePersona"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="Direccion"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:id="@+id/tv_direccion_DetallePersona"/>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp">


        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text=""
            android:background="@drawable/iconedit"
            android:textColor="@color/white"
            android:id="@+id/btn_editar_DetallePersona"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text=""
            android:layout_marginLeft="10dp"
            android:background="@drawable/anulardocumentoicon"
            android:textColor="@color/white"
            android:id="@+id/btn_eliminar_DetallePersona"/>




    </LinearLayout>



</LinearLayout>